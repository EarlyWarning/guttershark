package net.guttershark.display {	import flash.events.MouseEvent;		import flash.events.Event;		import flash.display.Sprite;			public class HeatMap extends Sprite 	{				private var hits:Array;		private var vectors:Sprite;		public function HeatMap()		{			super();			addEventListener(Event.ADDED_TO_STAGE,onAdd);			hits = [];			vectors = new Sprite();			vectors.mouseEnabled = false;			addChild(vectors);			mouseEnabled = false;		}				private function onAdd(e:Event):void		{			stage.addEventListener(MouseEvent.CLICK, onc);		}				private function onc(e:MouseEvent):void		{			var h:Sprite = new Sprite();			h.mouseEnabled = false			var mx:int = stage.mouseX;			var my:int = stage.mouseY;			h.graphics.beginFill(0xFF0066);			h.graphics.drawRect(mx-6,my-6,10,10);			h.graphics.endFill();			vectors.addChild(h);		}	}}