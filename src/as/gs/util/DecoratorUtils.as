package gs.util{		import flash.utils.Dictionary;		/**	 * The DecoratorUtils class contains helper methods	 * required to build chain-able decorators	 * (gs.display.decorators).	 */	public class DecoratorUtils 	{				/**		 * Singleton instance.		 */		private static var inst:DecoratorUtils;				/**		 * Singleton access.		 */		public static function gi():DecoratorUtils		{			if(!inst)inst=new DecoratorUtils();			return inst;		}				/**		 * @private		 */		public function DecoratorUtils():void{}				/**		 * Build the methods lookup from an		 * array of strings - which are method		 * names.		 * 		 * @param methds An array of strings - which are method names.		 */		public function buildMethods(methds:Array):Dictionary		{			var methods:Dictionary = new Dictionary();			var method:String;			for each(method in methds)methods[method]=true;			return methods;		}				/**		 * Build the properties lookup from an		 * array of strings - which are property		 * names.		 * 		 * @param prps An array of strings - which are property names.		 */		public function buildProps(prps:Array):Dictionary		{			var props:Dictionary=new Dictionary();			var prop:String;			for each(prop in prps)props[prop]=true;			return props;		}	}}